<div class="btn-toolbar" role="toolbar">
	@if ( canPostNew ) { <a href="@(blogUri)new" class="pushstate btn btn-primary">New Post</a> }
	@if ( canViewDrafts ) { <a href="@(blogUri)blog-admin/" class="pushstate btn btn-default">Manage Posts</a> }
	@if ( canViewUserList ) { <a href="@(blogUri)blog-admin/users/" class="pushstate btn btn-default">Manage Users</a> }
	@if ( canManageTags ) { <a href="@(blogUri)blog-admin/tags/" class="pushstate btn btn-default">Manage Tags</a> }
</div>
